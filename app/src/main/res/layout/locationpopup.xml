<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/locpop"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="X"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Choose Location"
        android:textColor="#353434"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="45dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="85dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/use_current_location"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:text="Use Current Location"
        android:textColor="#494444"
        app:icon="@android:drawable/ic_menu_mylocation"
        app:iconTint="#FF018786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="339dp"
        android:layout_height="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/use_current_location">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/maharashtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maharashtra" />

            <Button
                android:id="@+id/kerala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kerala" />

            <Button
                android:id="@+id/karnataka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karnataka" />

            <Button
                android:id="@+id/uttar_pradesh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uttar Pradesh" />

            <Button
                android:id="@+id/tamil_nadu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tamil Nadu" />

            <Button
                android:id="@+id/delhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <Button
                android:id="@+id/andhra_pradesh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andhra Pradesh" />

            <Button
                android:id="@+id/west_bengal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="West Bengal" />

            <Button
                android:id="@+id/chhattisgarh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chhattisgarh" />

            <Button
                android:id="@+id/rajasthan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rajasthan" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>